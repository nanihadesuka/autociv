<?xml version="1.0" encoding="utf-8"?>

<objects>

	<script directory="gui/common/"/>
	<script directory="gui/autociv_readme/"/>

	<object hotkey="cancel">
		<action on="Press">	autocivCL.Engine.PopGuiPage({}) </action>
	</object>

	<!-- Add a translucent black background -->
	<object type="button"
		sprite="color: 0 0 0 0">
		<action on="MouseLeftPress"> autocivCL.Engine.PopGuiPage({}) </action>
	</object>

	<object type="image"
		style="ModernDialog"
		size="50%-400 0%+50 50%+400 100%-50">
		<!-- Main title -->
		<object type="text"
			style="ModernLabelText"
			size="50%-128 -18 50%+128 14">Autociv readme</object>
		<!-- Main text -->
		<object type="text"
			style="ModernText"
			sprite="color:0 0 0 30"
			buffer_zone="20"
			size="0%+20 0%+20 100%-20 100%-20-50"
			scrollbar="true"
			scrollbar_style="ModernScrollBar"
			font="sans-16">
			<action on="Load">
				let markdown = Engine.ReadFile("autociv_data/README.md")
				this.caption = autociv_SimpleMarkup(markdown)
			</action>
		</object>
		<object size="0%+20 100%-15-17-25 100%-15 100%-25">
			<!-- Webpage button -->
			<object name="buttonWebpage"
				type="button"
				style="ModernButtonRed"
				size="50%-130-20 0% 50%-20 100%">
				<action on="Press">	Engine.OpenURL("https://wildfiregames.com/forum/index.php?/topic/28753-autociv-mod-0ad-enhancer/") </action>
			</object>
			<!-- Close button -->
			<object name="buttonClose"
				type="button"
				style="ModernButtonRed"
				size="50%+20 0% 50%+130+20 100%">
				<action on="Press">	autocivCL.Engine.PopGuiPage({}) </action>
			</object>
		</object>
	</object>
</objects>
