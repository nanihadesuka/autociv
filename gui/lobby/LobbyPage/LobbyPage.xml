				</object>
				<object size="0 100%-350 100% 100%-152">
					<include file="gui/lobby/LobbyPage/ProfilePanel.xml"/>
				</object>
				<object size="0 100%-152 100% 100%">
					<object name="toggleBuddyButton" type="button" style="ModernButtonRed" size="0 0 100% 25"/>
